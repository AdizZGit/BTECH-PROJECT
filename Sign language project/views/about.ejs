  <script>
    function goToHome() {
      window.location.href = "/data";
    }
    
    function displayImage(text) {
    // Convert the text to lowercase, replace spaces with hyphens, and remove any leading numbers
    var imageName = text.toLowerCase().replace(/\s+/g, '-');
    // Construct the image path
    var imagePath = "/images/sign-images/" + imageName + ".gif";
    // Get the image element
    var imageElement = document.getElementById("default-image");
    // Set the source of the image element to the constructed path
    imageElement.src = imagePath;
  
    imageElement.onerror = function () {
      // If the image does not exist, display the "not found" image
      this.src = "/images/tutorial-not-found.png";
      // document.getElementById("search-box").value = '';
      // alert("No tutorial for this: " + text);
    };
  }
  
  
  function getTheImg() {
    // Get the value from the search box
    var searchText = document.getElementById("search-box").value;
    // Call displayImage with the search text
    displayImage(searchText);
  }
  
  // Event listener for the search button click
  document.getElementById("search-btn").addEventListener("click", getTheImg);
  
  // Event listener for the Enter key press in the search box
  document.getElementById("search-box").addEventListener("keyup", function (event) {
    if (event.key === "Enter") {
      getTheImg();
    }
  });
  
