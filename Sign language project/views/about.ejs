<script>
  // Function to check screen width and add appropriate animation attribute
  function setAnimation() {
    var screenWidth = window.innerWidth;
    var aboutContainers = document.querySelectorAll('.about-content');

    aboutContainers.forEach(function (container) {
      var developer1 = container.querySelector('.about-developer1');
      var developer2 = container.querySelector('.about-developer2');
      var developerImg1 = container.querySelector('.about-developer-img1');
      var developerImg2 = container.querySelector('.about-developer-img2');

      if (screenWidth <= 800) {
        if (developer1) developer1.setAttribute('data-aos', 'fade-up');
        if (developer2) developer2.setAttribute('data-aos', 'fade-up');
        if (developerImg1) developerImg1.setAttribute('data-aos', 'fade-up');
        if (developerImg2) developerImg2.setAttribute('data-aos', 'fade-up');
      } else {
        if (developer1) developer1.setAttribute('data-aos', 'fade-right');
        if (developer2) developer2.setAttribute('data-aos', 'fade-left');
        if (developerImg1) developerImg1.setAttribute('data-aos', 'fade-left');
        if (developerImg2) developerImg2.setAttribute('data-aos', 'fade-right');
      }
    });

    // Reinitialize AOS
    AOS.init({
      duration: 1500,
      offset: 250,
      once: true
    });
  }

  // Call the function initially
  setAnimation();

  // Call the function whenever the window is resized
  window.addEventListener('resize', setAnimation);
</script>