  <script>// go to home link
    function goToHome() {
      window.location.href = "/data";
    }
    
    // nav active links
    document.addEventListener('DOMContentLoaded', function() {
      var path = window.location.pathname;
      var page = path.split("/").pop();
    
      var navLinks = document.querySelectorAll('.nav-links a');
      navLinks.forEach(function(link) {
          if (link.getAttribute('href') === page) {
              link.classList.add('active');
          }
      });
    });
    
    // navigation bar
    function showSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'flex';
    }
    function hideSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'none';
    }
    
    // splash screen
    document.addEventListener("DOMContentLoaded", function() {
      // Check if the splash screen has been shown before
      var splashShown = sessionStorage.getItem('splashShown');
      
      if (!splashShown) {
        // If splash screen hasn't been shown before, show it and mark as shown
        setTimeout(function() {
          transitionToMain();
          // Store in session storage that the splash screen has been shown
          sessionStorage.setItem('splashShown', 'true');
        }, 5000);
      } else {
        // If splash screen has been shown before, immediately transition to main content
        transitionToMain();
      }
    });
    
    function transitionToMain() {
      var splashScreen = document.querySelector('.splash-screen');
      var mainContent = document.querySelector('.main-content');
    
      splashScreen.style.opacity = '0';
      splashScreen.style.transition = 'opacity 1s ease';
    
      setTimeout(function() {
        splashScreen.style.display = 'none';
        mainContent.style.display = 'block';
        mainContent.style.opacity = '1';
        mainContent.style.transition = 'opacity 1s ease';
      }, 1000);
    }
    function displayImage(text) {
        // Convert the text to lowercase, replace spaces with hyphens, and remove any leading numbers
        var imageName = text.toLowerCase().replace(/\s+/g, '-');
        // Construct the image path
        var imagePath = "/images/sign-images/" + imageName + ".gif";
        // Get the image element
        var imageElement = document.getElementById("default-image");
        // Set the source of the image element to the constructed path
        imageElement.src = imagePath;
      
