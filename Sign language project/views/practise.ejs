<script>
  function startVideoStream() {
    // Send an HTTP GET request to the server to start the video stream
    fetch('/start-video')
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to start video stream');
            }
            console.log('Video stream started successfully');
        })
        .catch(error => {
            console.error('Error starting video stream:', error);
        });
}

// Event listener for the "Start Video" button
document.getElementById('start-video').addEventListener('click', startVideoStream);

</script>


